{
  "package": {
    "productName": "GoldenCrown Expander",
    "version": "0.1.0"
  },
  "tauri": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "GoldenCrown Expander",
        "label": "main",
        "width": 900,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "visible": true
      }
    ],
    "bundle": {
      "active": true,
      "identifier": "com.goldencrown.expander",
      "targets": "all",
      "icon": [
        "icons/icon.ico",
        "icons/icon.icns",
        "icons/icon.png"
      ]
    },
    "security": {
      "csp": null
    },
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": true
      },
      "globalShortcut": {
        "all": true
      },
      "fs": {
        "all": false
      },
      "clipboard": {
        "writeText": true,
        "readText": true
      }
    }
  },
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  }
}


